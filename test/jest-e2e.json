{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/common/(.*)": "<rootDir>/src/common/$1",
    "@app/common": "<rootDir>/src/common",
    "@app/modules/(.*)": "<rootDir>/src/modules/$1",
    "@app/modules": "<rootDir>/src/modules"
  }
}